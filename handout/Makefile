.PHONY: help submit

help:
	@echo "This lab consists of three parts and a bonus question. Change into one"
	@echo "of the subdirectories (part1, part2, part3, and bonus) and run 'make'"
	@echo "again."
	@echo ""
	@echo "To submit, run make with the 'submit' parameter:"
	@echo "  $$ make submit"
	@echo "You have to provide your information in the file STUDENT.ID or else"
	@echo "the submission will fail."

submit:
	@.bin/submit.sh
